<Notice
  @type="info"
as |notice|>
  <notice.Body>
    <p>
      {{t "components.consul.intention.notice.permissions.body"}}
    </p>
  </notice.Body>
  <notice.Footer>
    <p>
      <Hds::Button
        @text={{t "components.consul.intention.notice.permissions.footer"}}
        @href="{{env 'CONSUL_DOCS_URL'}}/connect/intentions"
        @color="tertiary"
        @icon="docs-link"
        @iconPosition="trailing"
        @size="small"
      />
    </p>
  </notice.Footer>
</Notice>

